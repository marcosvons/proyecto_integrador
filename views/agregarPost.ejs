<body>
    <% if (locals.user){ %> 
    <%- include('./partials/headerLogueado')  %> 
    <% } else { %>
    <%- include("./partials/headerDeslogueado") %>
    <% } %>   
    
<br><br>
    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-large uk-flex">
                <form action="/post/agregarPost" method="POST" class="agregarPost">
                    <div>
                        <label for="url_photo">Add Photo</label>
                        <input type="file" id="img" name="img" accept="image/*" required>
                    </div>
                    <div>
                        <textarea name="description" id="description" cols="30" rows="10" placeholder="Description"></textarea>
                    </div>
                    <button class="submit" type="submit">Post</button>
                </form>

            </div>
        </div>
    </main>
    <%- include('./partials/footer.ejs')  %> 
